<!DOCTYPE html>
<html>
<head>
  <title>Alterar Senha de Usuário</title>
</head>
<body>
  <h1>Alterar Senha de Usuário</h1>

  <% if (erro) { %>
    <p style="color: red;"><%= erro %></p>
  <% } %>

  <% if (sucesso) { %>
    <p style="color: green;"><%= sucesso %></p>
  <% } %>

  <form method="POST" action="/admin/usuarios">
    <label for="usuarioAlvo">Usuário:</label>
    <select name="usuarioAlvo" id="usuarioAlvo" required>
      <% usuarios.forEach(u => { %>
        <option value="<%= u.usuario %>"><%= u.usuario %></option>
      <% }) %>
    </select><br><br>

    <label for="novaSenha">Nova senha:</label>
    <input type="password" name="novaSenha" required><br><br>

    <button type="submit">Alterar Senha</button>
  </form>

  <p><a href="/cadastro">Voltar</a></p>
</body>
</html>

