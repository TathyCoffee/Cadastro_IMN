<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Beneficiários</title>
  <link rel="stylesheet" href="/estilo.css" />
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    h1 {
      text-align: center;
      margin-top: 20px;
      color: #333;
    }

    .acoes {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-bottom: 20px;
    }

    .acoes a {
      text-decoration: none;
      color: #fff;
      background-color: #4CAF50;
      padding: 10px 15px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .acoes a:hover {
      background-color: #45a049;
    }

    table {
      width: 90%;
      margin: 0 auto;
      border-collapse: collapse;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    th, td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #f2f2f2;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    td a {
      color: #007BFF;
      text-decoration: none;
      padding: 5px;
      border-radius: 5px;
      background-color: #f0f8ff;
    }

    td a:hover {
      background-color: #f2f2f2;
    }

    td a:active {
      background-color: #ddd;
    }

    /* Cores de feedback */
    .feedback-success {
      background-color: #c8e6c9;
      padding: 10px;
      text-align: center;
      font-weight: bold;
      margin-bottom: 20px;
    }

    .feedback-error {
      background-color: #ffcdd2;
      padding: 10px;
      text-align: center;
      font-weight: bold;
      margin-bottom: 20px;
    }

    @media screen and (max-width: 768px) {
      table {
        width: 100%;
        font-size: 12px;
      }

      .acoes {
        flex-direction: column;
        align-items: center;
      }

      .acoes a {
        margin: 5px 0;
      }
    }
  </style>
</head>
<body>
  <!-- Logo -->
  <div style="text-align: center; margin-top: 20px;">
    <img src="/img/logo.png" alt="Logo da Instituição" style="max-height: 100px;">
  </div>

  <h1>Lista de Beneficiários</h1>

  <!-- Feedback de Sucesso ou Erro -->
  <% if (sucesso) { %>
    <div class="feedback-success">
      <%= sucesso %>
    </div>
  <% } %>

  <% if (erro) { %>
    <div class="feedback-error">
      <%= erro %>
    </div>
  <% } %>

  <div class="acoes">
    <a href="/">Novo Cadastro</a>
    <a href="/exportar-pdf" target="_blank">Exportar PDF</a>
    <a href="/exportar-excel" target="_blank">Exportar Excel</a>
    <a href="/termo-pdf" target="_blank">Baixar Termo em PDF</a>
  </div>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Registro</th>
        <th>CAD/NIS</th>
        <th>Nascimento</th>
        <th>Deficiência</th>
        <th>Contato</th>
        <th>Endereço</th>
        <th>Renda</th>
        <th>Modalidades</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% beneficiarios.forEach(b => { %>
        <tr>
          <td><%= b.nome %></td>
          <td><%= b.registro %></td>
          <td><%= b.cadnis %></td>
          <td><%= b.nascimento %></td>
          <td><%= b.deficiencia %></td>
          <td><%= b.contato %></td>
          <td><%= b.endereco %></td>
          <td>R$ <%= b.renda %></td>
          <td><%= b.modalidades.join(", ") %></td>
          <td>
            <a href="/editar/<%= b.id %>">Editar</a>
            <a href="/excluir/<%= b.id %>" onclick="return confirm('Deseja realmente excluir este beneficiário?')">Excluir</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>